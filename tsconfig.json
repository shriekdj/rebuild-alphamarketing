{
    "extends": "./tsconfig.path.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["dom", "dom.iterable", "esnext", "ES2017"],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "importHelpers": true,
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "blog.config.ts"],
    "exclude": ["dist", ".next", "next.config.js", "node_modules"]
}
